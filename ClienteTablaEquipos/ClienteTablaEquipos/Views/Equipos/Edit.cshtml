@model ClienteTablaEquipos.Models.Equipo

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <h4>@Model.Nombre</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h5>@Model.PartitionKey División</h5>
    <h5>ID Equipo: @Model.RowKey</h5>       

    <div class="form-group">
        <h6 class="col-md-2">Nombre</h6>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h6 class="col-md-2">Ciudad</h6>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ciudad, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ciudad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h6 class="col-md-2">Entrenador</h6>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Entrenador, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Entrenador, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h6 class="col-md-2">Estadio</h6>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Estadio, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Estadio, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index", new { division = Model.PartitionKey })
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
